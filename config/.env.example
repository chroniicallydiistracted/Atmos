# Global configuration for AtmosInsight local stack

# Reverse proxy
PROXY_DOMAIN=localhost
PROXY_EMAIL=admin@example.com

# Object store (MinIO)
MINIO_ROOT_USER=localminio
MINIO_ROOT_PASSWORD=change-me-now
MINIO_CONSOLE_PORT=9090
MINIO_SERVER_PORT=9000
MINIO_ENDPOINT=http://object-store:9000
S3_BUCKET_RAW=raw
S3_BUCKET_DERIVED=derived
S3_BUCKET_TILES=tiles
S3_BUCKET_LOGS=logs

# Postgres
POSTGRES_USER=osm
POSTGRES_PASSWORD=change-me-too
POSTGRES_DB=osm
POSTGRES_PORT=5432
POSTGRES_HOST=postgres
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Ingestion
INGESTION_DATA_ROOT=/data/derived
GOES_ENABLED=true
MRMS_ENABLED=true
NEXRAD_ENABLED=true
NEXRAD_DEFAULT_SITE=KTLX
NEXRAD_DEFAULT_MINUTES_LOOKBACK=10
NEXRAD_MAX_FRAMES=10
NEXRAD_LOOKBACK_MINUTES=60
NEXRAD_GRID_RES_KM=1
NEXRAD_GRID_RADIUS_KM=300
NEXRAD_BUCKET_NAME=unidata-nexrad-level2
NEXRAD_ALLOW_UNSIGNED_S3=true
GOES_SOURCE_BUCKET=noaa-goes16
GOES_DEFAULT_BAND=13
GOES_DEFAULT_SECTOR=CONUS

# API
API_HOST=0.0.0.0
API_PORT=8081
INGESTION_BASE_URL=http://ingestion:8084
API_HTTP_TIMEOUT_SECONDS=30
API_CORS_ORIGINS=http://localhost:4173

# Basemap
BASEMAP_PORT=8082
BASEMAP_DATA_DIR=/app/data
BASEMAP_PMTILES_DEFAULT=planet.pmtiles
BASEMAP_CORS_ORIGINS=http://localhost:4173

# Frontend
VITE_API_BASE=http://localhost:8081
VITE_TILE_BASE=http://localhost:8083
VITE_BASEMAP_PM=http://localhost:8082/pmtiles/planet.z15.pmtiles
VITE_BICYCLE_PM=http://localhost:8082/pmtiles/cyclosm-bicycle.pmtiles
VITE_CYCLOSM_TILE_TEMPLATE=https://{s}.tile-cyclosm.openstreetmap.fr/cyclosm/{z}/{x}/{y}.png
VITE_CYCLOSM_TILE_SUBDOMAINS=a,b,c
VITE_NEXRAD_SITE=KTLX
# Optional manual timestamp (YYYYMMDDThhmmssZ) for testing overlay pre-UI automation
VITE_NEXRAD_TIMESTAMP=

# Monitoring (optional)
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
