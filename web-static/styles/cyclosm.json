{
  "version": 8,
  "name": "CyclOSM",
  "metadata": {
    "mapbox:autocomposite": true,
    "mapbox:type": "template"
  },
  "sources": {
    "osm": {
      "type": "vector",
      "url": "pmtiles://https://weather.westfam.media/basemaps/planet.z15.pmtiles",
      "attribution": "Â© OpenStreetMap contributors"
    }
  },
  "sprite": "https://weather.westfam.media/sprites/cyclosm/cyclosm",
  "glyphs": "https://weather.westfam.media/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "osm",
      "source-layer": "landuse",
      "filter": ["in", "class", "park", "cemetery", "hospital", "school"],
      "paint": {
        "fill-color": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["park", "#d8e8c8"],
            ["cemetery", "#e0e4dd"],
            ["hospital", "#fde8e8"],
            ["school", "#f0f0d8"]
          ]
        },
        "fill-opacity": 0.6
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "osm",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "osm",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a0c8f0",
        "line-width": {
          "stops": [[8, 1], [20, 8]]
        }
      }
    },
    {
      "id": "roads-casing",
      "type": "line",
      "source": "osm",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "trunk", "primary", "secondary"],
      "paint": {
        "line-color": "#e9ac77",
        "line-width": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["motorway", {"stops": [[5, 4], [9, 8], [20, 18]]}],
            ["trunk", {"stops": [[5, 3], [9, 6], [20, 14]]}],
            ["primary", {"stops": [[5, 2.5], [9, 5], [20, 12]]}],
            ["secondary", {"stops": [[8, 2], [11, 4], [20, 10]]}]
          ]
        }
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "osm",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "trunk", "primary", "secondary", "tertiary", "minor"],
      "paint": {
        "line-color": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["motorway", "#e892a2"],
            ["trunk", "#f9b29c"],
            ["primary", "#fcd6a4"],
            ["secondary", "#f7fabf"],
            ["tertiary", "#ffffff"],
            ["minor", "#ffffff"]
          ]
        },
        "line-width": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["motorway", {"stops": [[5, 2], [9, 4], [20, 15]]}],
            ["trunk", {"stops": [[5, 1.5], [9, 3], [20, 12]]}],
            ["primary", {"stops": [[5, 1], [9, 2.5], [20, 10]]}],
            ["secondary", {"stops": [[8, 1], [11, 2], [20, 8]]}],
            ["tertiary", {"stops": [[10, 0.5], [13, 1], [20, 6]]}],
            ["minor", {"stops": [[12, 0.5], [16, 1], [20, 4]]}]
          ]
        }
      }
    },
    {
      "id": "cycleways",
      "type": "line",
      "source": "osm",
      "source-layer": "transportation",
      "filter": ["all", ["==", "class", "path"], ["==", "subclass", "cycleway"]],
      "paint": {
        "line-color": "#ff00c5",
        "line-width": {
          "stops": [[10, 1], [20, 3]]
        },
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "osm",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "osm",
      "source-layer": "place",
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": {
          "property": "class",
          "type": "categorical",
          "stops": [
            ["country", 14],
            ["state", 12],
            ["city", 11],
            ["town", 10],
            ["village", 9]
          ]
        }
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#fff",
        "text-halo-width": 2
      }
    }
  ]
}