# Global configuration for AtmosInsight local stack

# Reverse proxy
PROXY_DOMAIN=weather.local
PROXY_EMAIL=admin@example.com

# Object store (MinIO)
MINIO_ROOT_USER=localminio
MINIO_ROOT_PASSWORD=change-me-now
MINIO_CONSOLE_PORT=9090
MINIO_SERVER_PORT=9000
MINIO_ENDPOINT=http://object-store:9000
S3_BUCKET_RAW=raw
S3_BUCKET_DERIVED=derived
S3_BUCKET_TILES=tiles
S3_BUCKET_LOGS=logs

# Postgres
POSTGRES_USER=osm
POSTGRES_PASSWORD=change-me-too
POSTGRES_DB=osm
POSTGRES_PORT=5432
POSTGRES_HOST=postgres
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Ingestion
INGESTION_DATA_ROOT=/data/derived
GOES_ENABLED=true
MRMS_ENABLED=true
NEXRAD_ENABLED=false

# API
API_HOST=0.0.0.0
API_PORT=8081

# Frontend
VITE_API_BASE=http://weather.local/api
VITE_TILE_BASE=http://weather.local/tiles

# Monitoring (optional)
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
